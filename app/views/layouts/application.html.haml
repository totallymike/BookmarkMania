!!! 5
%head
  %meta{charset: 'utf-8'}
  %title BookmarkMania
  = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
  = javascript_include_tag "application", "data-turbolinks-track" => true
  = yield :head
  = csrf_meta_tags
%body
  = render 'layouts/header'

  %div{class: 'wrapper'}
    - if notice
      %p{class: 'notice'}
        = notice
    -if alert
      %p{class: 'alert'}
        = alert

    %section{id: 'content'}
      = yield
